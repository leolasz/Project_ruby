<div class="row">
  <div class="col-xs-12 text-center">
    <h1>My applyes</h1>
    <br> <br>
  </div>

  <div class="col-md-8 col-md-offset-2 col-xs-12">
    <table class="table table-striped">
      <thead>
        <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Position</th>
      <th>Phone</th>
        <th>email</th>

         <th colspan="3"></th>
     <span>  <strong> Manage</strong> </span>
      <%= link_to 'New aplly',  new_apply_path(current_user), class: 'btn btn-success'%>
            <%= link_to 'back', user_path(current_user), class: 'btn btn-success'%>
            
          </th>
        </tr> 
          <th colspan="5">

      <tbody>
        <% if @applies.empty? %>
          <tr>
            <td colspan="4" class="text-center">
              <h3>No registered applications.</h3>
              <%= link_to 'click here', new_apply_path(current_user) %> to register a new application
            </td>
          </tr>
        <% end %>
        <% @applies.each do |c| %>
        <tr>
          <td>
            <%= c.name %>
          </td>
          <td>
            <%= c.age %>
          </td>
           <td>
            <%= c.position %>
          </td>
          <td>
            <%= c.phone %>
          </td>
          <td>
            <%= c.email %>
          </td>
          <td>
            <%= link_to 'Edit', edit_apply_path(c), class: 'btn btn-warning' %>
          </td>
          <td>
            <%= link_to 'Destroy', apply_path(c), method: :delete, class: 'btn btn-danger', data: { confirm: 'Tem certeza que deseja excluir?' } %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>